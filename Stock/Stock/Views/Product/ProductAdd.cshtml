@model Data.Models.Product
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductAdd</h1>
<br />
@using (Html.BeginForm("ProductAdd", "Product", FormMethod.Post))
{
    @Html.Label("Product Name")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Status")
    @Html.TextAreaFor(x => x.ProductStatus, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Save</button>
}
