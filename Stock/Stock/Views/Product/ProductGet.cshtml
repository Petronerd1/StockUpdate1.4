@model Data.Models.Product
@{
    ViewData["Title"] = "ProductGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductGet</h1>
<br />

@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductName)
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductStock)
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductPrice)
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ProductStatus)
    @Html.TextBoxFor(x => x.ProductStatus, new { @class = "form-control" })
    <br />
    <button class="btn btn-light">Update</button>
}
   